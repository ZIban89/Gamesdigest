<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/theme_pref_header">

        <SwitchPreferenceCompat
            app:key="@string/theme_switcher_key"
            app:summaryOff="Light theme"
            app:summaryOn="Dark theme"
            app:title="Theme switcher" />


    </PreferenceCategory>

    <PreferenceCategory app:title="@string/email_pref_header">

        <EditTextPreference
            app:key="@string/email_pref_key"
            app:summary="Email for notification"
            app:title="Your email"
            />

    </PreferenceCategory>

</PreferenceScreen>